@model IEnumerable<GestaoFinancasWeb.Models.Categoria>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Gerir Categorias</h2>
        <a asp-action="Criar" class="btn btn-success">+ Nova Categoria</a>
    </div>

    <table class="table table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Nome da Categoria</th>
                <th style="width: 150px;">Ações</th> </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>
                        <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Voltar ao Início</a>
</div>