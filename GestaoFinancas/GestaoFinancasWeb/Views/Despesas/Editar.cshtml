@model GestaoFinancasWeb.Models.Despesa

<h2>Editar Despesa</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Identificacao" />

    <div class="form-group">
        <label>Descrição:</label>
        <input asp-for="Descricao" class="form-control" />
    </div>

    <div class="form-group">
        <label>Valor (€):</label>
        <input asp-for="Valor" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label>Data:</label>
        <input asp-for="Data" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Categoria:</label>
        <select asp-for="CategoriaNome" class="form-control"
                asp-items="@(new SelectList(ViewBag.ListaCategorias, "Nome", "Nome"))">
            <option value="">-- Selecione uma Categoria --</option>
        </select>
    </div>
    
    <br/>
    <button type="submit" class="btn btn-primary">Guardar Alterações</button>
    <a href="/Despesas" class="btn btn-secondary">Cancelar</a>
</form>