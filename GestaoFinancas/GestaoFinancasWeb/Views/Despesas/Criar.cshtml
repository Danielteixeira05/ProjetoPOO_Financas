@model GestaoFinancasWeb.Models.Despesa

<h2>Adicionar Despesa</h2>

<form action="/Despesas/Criar" method="post">
    <label>Descrição:</label>
    <input type="text" name="Descricao" class="form-control" />
    
    <label>Valor:</label>
    <input type="number" name="Valor" step="0.01" class="form-control" />
    
    <label>Categoria:</label>
    <input type="text" name="CategoriaNome" class="form-control" />
    
    <button type="submit" class="btn btn-danger" style="margin-top:10px">Guardar</button>
</form>