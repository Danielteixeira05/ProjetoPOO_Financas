@model GestaoFinancasWeb.Models.Utilizador

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h3 class="text-center">Novo Registo</h3>

                @if (ViewBag.Erro != null)
                {
                    <div class="alert alert-danger">@ViewBag.Erro</div>
                }

                <form asp-action="Registar" method="post">
                    <div class="mb-3">
                        <label>Nome de Utilizador</label>
                        <input asp-for="Username" class="form-control" required />
                    </div>
                    
                    <div class="mb-3">
                        <label>Password</label>
                        <input asp-for="Password" type="password" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-success w-100">Registar</button>
                </form>
                
                <div class="mt-3 text-center">
                    <a asp-action="Login">Voltar ao Login</a>
                </div>
            </div>
        </div>
    </div>
</div>