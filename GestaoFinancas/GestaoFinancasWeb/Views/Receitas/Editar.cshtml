@model GestaoFinancasWeb.Models.Receita
<h2>Editar Receita</h2>
<form action="/Receitas/Editar" method="post">
    <input type="hidden" name="Identificacao" value="@Model.Identificacao" />
    
    <label>Descrição:</label>
    <input type="text" name="Descricao" value="@Model.Descricao" class="form-control" />
    
    <label>Valor:</label>
    <input type="number" name="Valor" value="@Model.Valor" step="0.01" class="form-control" />
    
    <label>Categoria:</label>
    <input type="text" name="CategoriaNome" value="@Model.CategoriaNome" class="form-control" />
    
    <button type="submit" class="btn btn-warning" style="margin-top:10px">Atualizar</button>
    <a href="/Receitas" class="btn btn-secondary" style="margin-top:10px">Cancelar</a>
</form>