@{
    ViewData["Title"] = "Dashboard Financeiro";
}

<div class="text-center mb-5">
    <h1 class="display-4">O Meu Painel Financeiro</h1>
    <p class="lead">Visão geral das suas finanças pessoais.</p>
</div>

<div class="row text-center mb-5">
    <div class="col-md-4">
        <div class="card text-white bg-success shadow h-100">
            <div class="card-header">Total Receitas</div>
            <div class="card-body">
                <h2 class="card-title">€ @ViewBag.TotalReceitas</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-danger shadow h-100">
            <div class="card-header">Total Despesas</div>
            <div class="card-body">
                <h2 class="card-title">€ @ViewBag.TotalDespesas</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-primary shadow h-100">
            <div class="card-header">Saldo Atual</div>
            <div class="card-body">
                <h2 class="card-title">€ @ViewBag.Saldo</h2>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
                <h5 class="mb-0">Despesas</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.DespesasPorCategoria != null)
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Categoria</th>
                                <th class="text-end">Total Gasto</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.DespesasPorCategoria)
                            {
                                <tr>
                                    <td>@item.Nome</td>
                                    <td class="text-end fw-bold text-danger">€ @item.Total</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted text-center">Ainda não há dados suficientes.</p>
                }
            </div>
        </div>
    </div>
</div>